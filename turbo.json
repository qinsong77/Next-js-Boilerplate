{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "type-check": {
      "inputs": ["**/*.{ts,tsx}"]
    },
    "build": {
      "dependsOn": ["type-check", "lint", "format", "test", "^build"],
      "outputs": ["dist/**"],
      "env": []
    },
    "lint": {},
    "format": {},
    "test": {
      "inputs": ["**/*.test.ts", "**/*.test.tsx", "!e2e/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"]
    },
    "e2e": {
      "inputs": ["e2e/**"]
    }
  }
}
